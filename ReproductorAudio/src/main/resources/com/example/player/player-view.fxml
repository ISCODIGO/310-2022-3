<?import javafx.scene.text.*?>

<BorderPane prefHeight="251.0" prefWidth="516.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.player.PlayerController">
